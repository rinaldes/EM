<div class="row">
  <div class="page-header">
    <div class="page-title" style="padding-left: 14px;">
      <h3>My Event List</h4>
    </div>
  </div>
  <!--=== Advanced Table ===-->
  <div class="col-md-12">
    <div class="widget">
      <div class="widget-content">
        <div class="row">
          <div class="col-md-6">
            <label>
              <div class="input-group"><span class="input-group-addon"><i class="icon-search"></i></span>
                <input type="text" aria-controls="DataTables_Table_0" class="form-control">
              </div>
            </label>
            </div>
            <div class="col-md-6 align-right">
              <%= link_to raw("<i class='icon-plus'></i> Create Event"), new_event_path, class: 'btn' %>
            </div>
          </div>
          <table class="table table-striped table-bordered table-checkable table-highlight-head table-no-inner-border table-hover">
            <tbody>
              <%= render 'list' %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="widget-content">
        <div class="row">
          <div class="table-footer">
            <div class="col-md-6">
            </div>
            <div class="col-md-6">
              <%= paginate @events %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
