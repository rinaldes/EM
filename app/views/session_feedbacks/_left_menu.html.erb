<div class="col-md-3">
    <div class="list-group">
        <li class="list-group-item list-group-header">
            <strong>Feedback Question</strong>
        </li>
        <% @session_feedbacks.each_with_index do |session_feedback, index| %>
            <li class="list-group-item <%= 'active' if session_feedback.id.to_s == params[:id] %>">
              <%= link_to truncate(strip_tags(session_feedback.question).try(:titleize), :length => 90, :omission => ' ...'), edit_event_session_feedback_path(@event.id, session_feedback.id) , :title => session_feedback.question.try(:titleize) %>
              <span class="badge-trash"><%= link_to raw('<i class="icon-trash"></i>'),  event_session_feedback_path(@event.id, session_feedback.id),  method: :delete, data: { confirm: 'Are you sure?' }, class:  'bs-tooltip', title: 'Delete'  %></span>
            </li>
        <% end %>
        <%= link_to 'New Question', new_event_session_feedback_path(:event_id => @event.id), class: "list-group-item #{'active' if params[:action] == 'new'}" %>
    </div>
</div>