<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title">New Agenda</h4>
</div>
<div class="modal-body">
    <div class="form-group">
        <label class="col-md-3 control-label">Type</label>
        <div class="col-md-9">
         <%= f.select :agenda_type_id, options_for_select(AgendaType.all.map{ |c| [c.name.titleize, c.id] }, f.object.agenda_type_id), {:prompt => 'Select Type'}, { :class => 'form-control' } %>
        </div>

        <label class="col-md-3 control-label"></label>
        <div class="col-md-9">
            <%= text_field_tag :new_agenda_type, "", class: "form-control", placeholder: 'Enter Customize Agenda Type Name' %>
        </div>

    </div>
    <div class="form-group">
        <label class="col-md-3 control-label">Title <span class="required">*</span></label>
        <div class="col-md-9">
            <%= f.text_field :title, class: "form-control" %>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label">Place</label>
        <div class="col-md-9">
            <%= f.text_field :place, class: "form-control" %>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label">Time</label>
        <div class="col-md-4">
            <%= f.text_field :start_time, class: "form-control pickatime" %>
        </div>
        <div class="col-md-1">
            to
        </div>
        <div class="col-md-4">
            <%= f.text_field :end_time, class: "form-control pickatime" %>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label">Description </label>
        <div class="col-md-9">
            <%#= f.cktext_area :description, :class => 'ckeditor', :ckeditor => {:toolbar => 'mini'}%>
            <%= f.text_area :description, :size => "45x5" %>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
    <%= f.submit "Save Agenda", name: 'save', class: "btn btn-primary pull-right", data: { :disable_with => "Please wait..." }%>
    <%= f.hidden_field :agenda_date, :value => @event_date %>
</div>
