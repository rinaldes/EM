<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title"><%= f.object.title %></h4>
</div>
<div class="modal-body">
    <div class="form-group">
        <label class="col-md-3 control-label">Title <span class="required">*</span></label>
        <div class="col-md-9">
            <%= p.text_field :title, class: "form-control" %>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label">Time </label>
        <div class="col-md-4">
            <%= p.text_field :start_time, class: "form-control programme-pickatime-#{f.object.id}" %>
        </div>
        <div class="col-md-1">
            to
        </div>
        <div class="col-md-4">
            <%= p.text_field :end_time, class: "form-control programme-pickatime-#{f.object.id}" %>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label">Description </label>
        <div class="col-md-9">
            <%#= f.cktext_area :description, :class => 'ckeditor', :ckeditor => {:toolbar => 'mini'} %>
            <%= p.text_area :description, :size => "45x5" %>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label">Speaker <span class="required">*</span></label>
        <div class="col-md-9">
            <%= p.text_field :speaker, class: "form-control" %>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
     <%= p.submit "Save Agenda", name: 'save', class: "btn btn-primary pull-right", data: { :disable_with => "Please wait..." }%>
    <%= p.hidden_field :agenda_date, :value => @event_date %>
</div>