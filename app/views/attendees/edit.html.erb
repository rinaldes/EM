<div class="row">
  <div class="col-md-12">
    <%= render 'events/page_header' %>
    <!-- Tabs-->
    <div class="tabbable tabbable-custom tabbable-full-width">
      <%= render 'events/nav_tabs' %>
      <div class="tab-content row">
        <!--=== Overview ===-->
        <div class="tab-pane" id="tab_overview">
        </div>
        <!-- /Overview -->
        <!--=== Edit Account ===-->
        <div class="tab-pane active" id="tab-event-general">
          <!-- <form class="form-horizontal" action="#"> -->
            <!-- <div class="col-md-12"> -->
            <div class="col-md-12 form-vertical no-margin">
              <div class="widget">
                <div class="widget-content">
                  <div class="row">
                    <!--=== Advanced Table ===-->
                    <div class="col-md-12">
                      <div class="widget">
                        <div class="widget-header no-border">
                          <h4>Attendee List</h4>
                          <div class="toolbar no-padding">
                            <div class="btn-group">
                              <button class="btn dropdown-toggle" data-toggle="dropdown">
                                <i class="icon-plus"></i> Add Attendee
                                <span class="caret"></span>
                              </button>
                              <ul class="dropdown-menu pull-right" style="text-align: left;">
                                <!--li>
                                  <a href="#from-hrm-dialog" data-toggle="modal"><i class="icon-exchange"></i> Add from HRM</a>
                                </li-->
                                <li>
                                  <a href="#new-attendee-dialog" data-toggle="modal"><i class="icon-user"></i> Create New Attendee</a>
                                </li>
                              </ul>
                            </div>
                          </div>
                        </div>
                        <div class="widget-content">
                            <%= form_for @event, url: event_attendees_path(@event.id), html: {class: "form-horizontal row-border", id: "event-general-form"} do |f| %>
                                <table class="table table-striped table-bordered table-checkable table-highlight-head table-no-inner-border table-hover">
                                    <thead>
                                        <tr >
                                          <th class="align-center"width="20">No.</th>
                                          <th class="align-center" colspan="2">Name</th>
                                          <th class="align-center">Email</th>
                                          <th class="align-center">Category</th>
                                          <th class="align-center">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if f.object.attendees.present? %>
                                            <%= f.fields_for :attendees, f.object.attendees.order("created_at DESC") do |attendee| %>
                                                <%= render 'attendee_fields', f: attendee %>
                                            <% end %>
                                        <% else %>
                                            <tr>
                                              <td colspan="7" align="center">No Attendee yet!</td>
                                            </tr>
                                        <% end %>
                                    </tbody>
                                </table>
                            <% end %>
                        </div>
                </div> <!-- /.widget-content -->
              </div> <!-- /.widget -->
            </div> <!-- /.col-md-12 -->
            <div class="col-md-12 form-vertical no-margin">
            </div> <!-- /.col-md-12 -->
          <!-- </form> -->
        </div>
      <!-- /Edit Account -->
      </div> <!-- /.tab-content -->
    </div>
    <!--END TABS-->
  </div>
</div> <!-- /.row -->
<%= render 'new_attendee' %>